@{
  Layout = "_Layout";
}
@using VendorOrderTracker.Models;

<div class="container">
  <h2>Vendors</h2>
  <table>
  <tr>
    <th>Vendor</th>
    <th>Number of Orders</th>
    <th>Production</th>
  </tr>
  
  @foreach (Vendor vendor in Model)
  {
    <tr>
    
      <td><a href="/vendors/@vendor">@vendor.Name</a></td>
      <td>@vendor.Orders.Count</td>
      <td>$@vendor.Production</td>
      
    </tr>
  }
  
  </table>
  
  <h3>Add Vendor</h3>
  <form action="/vendors" method="post">
  <label for="name">Vendor Name:</label>
  <input type="text" id="name" name="name">
  <button type="submit">Add Vendor</button>
  </form>
</div>