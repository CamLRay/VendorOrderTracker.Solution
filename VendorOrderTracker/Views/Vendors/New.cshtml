@{
  Layout = "_Layout";
}
@using VendorOrderTracker.Models;


<div class="container">
  <h3>Add Vendor</h3>
  <form action="/" method="post">
    <label for="name">Vendor Name:</label><br>
    <input type="text" id="name" name="name" placeholder="Enter Name" required><br>
    <label for="description">Vendor Description</label><br>
    <textarea type="text" id="description" rows="4" cols="50" name="description"></textarea><br>
    <button type="submit">Add Vendor</button>
  </form>
</div>